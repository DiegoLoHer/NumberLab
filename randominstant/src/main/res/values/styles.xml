<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Fad_AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--        Theme.AppCompat.Light.DarkActionBar-->
        <!--        <item name="android:windowContentOverlay">@null</item>
                <item name="windowActionBarOverlay">true</item>
                <item name="colorPrimary">@android:color/transparent</item>-->
    </style>

    <style name="Fad_Text" tools:ignore="ResourceName">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Fad_Title" parent="Fad_Text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Fad_SubTitle" parent="Fad_Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Fad_BaseButton">
        <!--        <item name="android:fontFamily">sans-serif</item>-->
        <item name="android:height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/fad_button_primary_text</item>
        <item name="android:background">@drawable/fad_button_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Fad_SecondaryButton" parent="Fad_BaseButton">
        <item name="android:textColor">@drawable/fad_button_secondary_text</item>
        <item name="android:background">@drawable/fad_button_secondary</item>
    </style>

    <declare-styleable name="Fad_SignPreviewView">
        <attr name="Fad_showMediaControls" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Fad_SendProgressView">
        <attr name="Fad_showEmail" format="boolean" />
    </declare-styleable>

</resources>